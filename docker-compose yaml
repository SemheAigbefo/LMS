version: '3.8'
services:
  app:
    build: .
    env_file: .env
    environment:
      DB_HOST: db
      DB_NAME: lms
      DB_USER: postgres
      DB_PORT: 5432
    depends_on:
      - db

  db:
    image: postgres:13
    env_file: .env
    environment:
      POSTGRES_DB: lms
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: ${DB_PASSWORD}
    volumes:
      - postgres_data:/var/lib/postgresql/data

volumes:
  postgres_data: